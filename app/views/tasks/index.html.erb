<div class="container">

	<h2>Task List</h2>	

	<table class="table table-bordered">
		<thead>
			<tr>
				<th></th>
				<th>date</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>

			<% @tasks.each do |task| %>
			<tr>
				<td>
					<% if task.due_date > Date.today %>
					<i  class="fa fa-check"></i>
					<% end %>				
 
				</td>
				<td><%= task.due_date %></td>

				<td><%= link_to task.name, task_path(task) %></td>			
				<td>
					<%= link_to edit_task_path(task), :class => 'button white' do %>	
					<button type="button" class="btn btn-default" aria-label="Right Align">						
						<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
					</button>	

					<% end %>
					<% if task.due_date > Date.today %>
					<%= link_to task_path(task), :class => 'button white', method: :delete, data:{ confirm: "Are you sure?" }  do %>		
					<button type="button" class="btn btn-default" aria-label="Right Align">						
						<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
					</button>	
					<% end %>
					<% end %>
				</td>
			</tr>
			<% end %>

		</tbody>
	</table>


</div>



