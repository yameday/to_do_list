<!-- Page Content -->
<div class="container">


	<h2><%= @task.due_date %></h2>
	<div class="panel panel-default">
		<div class="panel-heading"><%= @task.name %></div>
		<div class="panel-body"><%= simple_format(@task.note) %></div>
	</div>


</div>	

<p class="text-center">

	<%= link_to tasks_path, :class => 'button white' do %>	
	<button type="button" class="btn btn-default btn-lg" aria-label="Center Align">						
		<span class="glyphicon glyphicon-home" aria-hidden="true"></span>
	</button>	
	<% end %>
	
</p>

